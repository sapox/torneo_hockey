<h1>Listing partidos</h1>

<table class="table">
  <thead>
  <tr>
    <th>Cancha</th>
    <th>Equipo 1</th>
    <th>Equipo 2</th>
    <th>Fecha encuentro</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @partidos.each do |partido| %>
  <tbody>
  <tr>
    <td><%= partido.cancha_id %></td>
    <td><%#= partido.equipos.first %></td>
    <td><%#= partido.equipos.last %></td>
    <td><%= partido.fecha_encuentro.strftime("%d - %m - %Y") %></td>
    <td><%= link_to 'Show', partido %></td>
    <td><%= link_to 'Edit', edit_partido_path(partido) %></td>
    <td><%= link_to 'Destroy', partido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</thead>
</table>

