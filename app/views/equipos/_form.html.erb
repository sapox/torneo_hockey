<%= form_for(@equipo) do |f| %>
  <% if @equipo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipo.errors.count, "error") %> Corregir primero los siguientes campos:</h2>

      <ul>
      <% @equipo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
   <%= f.label :sexo %><br />
   <%= f.select :sexo, {femenino: 'femenino', masculino: 'masculino'}.collect{|k,v| [k, v]}%>
  </div>
  <div class="field">
    <%= f.label :categoria %><br />
    <%= f.select :categoria, {mosquito: 'mosquito', DecimaDivision: 'DecimaDivision', NovenaDivision: 'NovenaDivision', OctavaDivision: 'OctavaDivision', SeptimaDivision: 'SeptimaDivision'}.collect{|k,v| [k, v]}%>
  </div>
  <div class="field">
  	<%= f.label :nombre%><br />
  	<%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :cantidad_de_victorias %><br />
    <%= f.number_field :cantidad_de_victorias %>
  </div>
  <div class="field">
    <%= f.label :cantidad_de_derrotas %><br />
    <%= f.number_field :cantidad_de_derrotas %>
  </div>
  <div class="field">
    <%= f.label :cantidad_de_empates %><br />
    <%= f.number_field :cantidad_de_empates %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
